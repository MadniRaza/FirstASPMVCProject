@model OctaneApp.App.Rtr.Models.RtrInspModel
@{
    Layout = null;
}


<div class="row">
    <div class="col-lg-12">
        <div class="card h-100">
            <div class="card-header">
                <div class="float-left">
                    <h4>
                        Process Step
                    </h4>
                </div>
                <div class="float-right">
                    <button type="button" class="btn btn-primary" onclick="Back()">Back</button>
                </div>
            </div>
            <div class="card-body">
                <div id="InfoMsg">
                </div>

                <form class="form">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-lg-4 mb-4">
                                <div class="section">
                                    <h4 class="form-section">Scanning</h4>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.DropDownListFor(model => model.Station,
                                                            new List<SelectListItem>
                                                        {
                                                            new SelectListItem{ Text="A", Value = "1" },
                                                            new SelectListItem{ Text="B", Value = "2" },
                                                            new SelectListItem{ Text="C", Value = "3" }
                                                         }, "Select", htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.DropDownListFor(model => model.Station,
                                                            new List<SelectListItem>
                                                        {
                                                            new SelectListItem{ Text="A", Value = "1" },
                                                            new SelectListItem{ Text="B", Value = "2" },
                                                            new SelectListItem{ Text="C", Value = "3" }
                                                         }, "Select", htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.TextBoxFor(model => model.UnitLabel, htmlAttributes: new { @placeholder = @Html.DisplayNameFor(model => model.UnitLabel), @class = "form-control" })
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 mb-4">
                                <div class="section">
                                    <h4 class="form-section">Comments</h4>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.TextAreaFor(model => model.Comments, htmlAttributes: new { @placeholder = @Html.DisplayNameFor(model => model.Comments), @class = "form-control", @rows = 4 })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 mb-4">
                                Essentials
                            </div>
                        </div>

                    </div>
                </form>

            </div>
            <div class="card-footer">

                <div class="float-left">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Doc">
                        <i class="fas fa-file"></i>
                    </button>
                    <button type="button" class="btn btn-success">
                        <i class="fas fa-info"></i>
                    </button>
                    <button type="button" class="btn btn-success">
                        <i class="fas fa-question-circle"></i>
                    </button>
                </div>

                <div class="float-right">
                    <button type="button" class="btn btn-primary" style="width:100px;">
                        <i class="ft-check"></i> Save
                    </button>
                    <button type="button" class="btn btn-outline-primary mr-1" style="width:100px;">
                        <i class="ft-x"></i> Reset
                    </button>
                </div>

                <div class="modal fade" id="ErrorMsg">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Following error(s) occured:</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body" id="modal-body">
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="Doc">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Document</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body" id="modal-body">
                                <img src="~/Content/img/userdp.jpg" width="400" height="400" />
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>